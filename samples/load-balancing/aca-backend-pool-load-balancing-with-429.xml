<!--
    Enhanced policy sample that calls an existing Azure Container Apps backend with a prioritized set of backends.

    This version includes on-error handling to return a 429 (Too Many Requests) status code when the backend pool
    is unhealthy (503 status). The Retry-After header from the backend is passed through to the caller.
-->
<policies>
    <inbound>
        <base />
        <set-backend-service backend-id="{backend_id}" />
    </inbound>
    <backend>
        <!--Apply load-balancing and retry mechanisms -->
        <!--Set count to one less than the number of backends in the pool to try all backends until the backend pool is temporarily unavailable.-->
        <retry count="{retry_count}" interval="0" first-fast-retry="true" condition="@(context.Response.StatusCode == 429 || context.Response.StatusCode == 503)">
            <forward-request buffer-request-body="true" />
        </retry>
    </backend>
    <outbound>
        <base />
    </outbound>
    <on-error>
        <base />
        <!-- Catch 503 responses that indicate the backend pool is unhealthy and return 429 instead -->
        <!-- The Retry-After header is already contained in the output from the backend and will be passed back to the caller -->
        <choose>
            <when condition="@(context.Response.StatusCode == 503)">
                <set-status code="429" reason="Too Many Requests" />
            </when>
        </choose>
    </on-error>
</policies>
